    "bcryptjs": "2.4.3",
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "ejs": "^3.1.2",
    "express": "^4.17.1",
    "express-ejs-layouts": "^2.5.0",
    "express-session": "^1.17.1",
    "hosted-git-info": "^4.0.2",
    "if-env": "^1.0.4",
    "jquery": "^3.5.1",
    "lodash": "^4.17.21",
    "method-override": "^3.0.0",
    "mongoose": "^5.10.1",
    "mongoose-permissions": "^1.0.0",
    "mysql2": "^1.7.0",
